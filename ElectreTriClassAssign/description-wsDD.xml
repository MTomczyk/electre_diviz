<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">
  <program provider="" name="ElectreTriClassAssign" displayName="ElectreTriClassAssign" version="0.1.0" />
  <documentation>
    <description>
      ElectreTriClassAssign - computes assignments (&qout;affectations&qout;)
      according to the Electre TRI method.

      This module (along with ElectreTriConcordance, ElectreTriDiscordances and
      ElectreTriCredibility) is equal to ElectreTriExploitation module split into
      four separate parts for user's convenience.
    </description>
    <url>http://github.com/xor-xor/electre_diviz</url>
  </documentation>

    <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
      <documentation>
        <description>The alternatives to consider.</description>
      </documentation>
      <xmcda tag="alternatives" />
    </input>

    <input id="input2" name="categoriesProfiles" displayName="categoriesProfiles" isoptional="0">
      <documentation>
        <description>Definitions of the boundary actions (profiles).</description>
      </documentation>
      <xmcda tag="categoriesProfiles"/>
    </input>

    <input id="input3" name="credibility" displayName="credibility" isoptional="0">
      <documentation>
        <description>
          Credibility matrix (alternatives vs profiles) which should be used in
          exploitation procedure.
        </description>
      </documentation>
      <xmcda tag="alternativesComparisons"/>
    </input>

    <input id="input4" name="cut_threshold" displayName="cut_threshold" isoptional="0">
      <documentation>
        <description>Cut threshold for outranking relation.</description>
      </documentation>
      <xmcda tag="methodParameters">
        <![CDATA[
        <methodParameters>
          <parameter name="cut_threshold">
            <value>
              <real>%1</real>
            </value>
          </parameter>
        </methodParameters>
        ]]>
      </xmcda>
      <gui status="preferGUI">
        <entry id="%1" type="float" displayName="cut_threshold">
          <constraint>
            <description>The value should be in range &lt;0, 1>.</description>
            <code>
              <![CDATA[
                0.0 <= %1 && %1 <= 1.0
              ]]>
            </code>
          </constraint>
          <defaultValue>0.7</defaultValue>
        </entry>
      </gui>
    </input>

    <output id="output0" name="messages" displayName="messages">
      <documentation>
        <description>Messages or errors generated by this module.</description>
      </documentation>
      <xmcda tag="methodMessages" />
    </output>

    <output id="output1" name="affectations" displayName="affectations">
      <documentation>
        <description>
          The affectations of the alternatives computed from the given input data.
        </description>
      </documentation>
      <xmcda tag="alternativesAffectations"/>
    </output>

  </parameters>
</program_description>
