<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">
  <program provider="PUT" name="ElectreTriCredibility" displayName="ElectreTriCredibility" version="0.1.0" />
  <documentation>
    <description>
      ElectreTriCredibility - computes credibility matrix as presented in the
      Electre TRI method.

      It uses the same procedure as in ElectreTriCCredibility - only the input
      files are slightly different (boundary actions instead of central
      reference actions).

      This module (along with ElectreTriClassAssign, ElectreTriConcordance and
      ElectreTriDiscordances) is equal to ElectreTriExploitation module split
      into four separate parts for user's convenience.
    </description>
    <url>http://github.com/xor-xor/electre_diviz</url>
  </documentation>

    <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
      <documentation>
        <description>The alternatives to consider.</description>
      </documentation>
      <xmcda tag="alternatives" />
    </input>

    <input id="input2" name="categoriesProfiles" displayName="categoriesProfiles" isoptional="0">
      <documentation>
        <description>Definitions of the boundary actions (profiles).</description>
      </documentation>
      <xmcda tag="categoriesProfiles" />
    </input>

    <input id="input3" name="concordance" displayName="concordance" isoptional="0">
      <documentation>
        <description>
          Concordance matrix with aggregated concordance indices (i.e. one
          index per pair of alternatives/profiles).
        </description>
      </documentation>
      <xmcda tag="alternativesComparisons" />
    </input>

    <input id="input4" name="discordances" displayName="discordances" isoptional="0">
      <documentation>
        <description>Partial (i.e. per-criterion) discordance indices.</description>
      </documentation>
      <xmcda tag="alternativesComparisons" />
    </input>

    <output id="output0" name="messages" displayName="messages">
      <documentation>
        <description>Messages or errors generated by this module.</description>
      </documentation>
      <xmcda tag="methodMessages" />
    </output>

    <output id="output1" name="credibility" displayName="credibility">
      <documentation>
        <description>Credibility matrix computed from the given data.</description>
      </documentation>
      <xmcda tag="alternativesComparisons" />
    </output>

  </parameters>
</program_description>
