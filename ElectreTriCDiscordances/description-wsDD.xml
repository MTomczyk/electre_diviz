<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">
  <program provider="PUT" name="ElectreTriCDiscordances" displayName="ElectreTriCDiscordances" version="0.1.0" />
  <documentation>
    <description>
      Computes partial (i.e. per-criterion) discordances as in the Electre
      Tri-C method.

      It uses the same procedure as in ElectreTriDiscordances - only the input
      files are slightly different (central reference actions instead boundary
      actions).
    </description>
    <url>http://github.com/xor-xor/electre_diviz</url>
  </documentation>

    <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
      <documentation>
        <description>The alternatives to consider.</description>
      </documentation>
      <xmcda tag="alternatives" />
    </input>

    <input id="input2" name="categoriesProfiles" displayName="categoriesProfiles" isoptional="0">
      <documentation>
        <description>
          Definitions of the central profiles which should be used for
          categories (classes) representation.
        </description>
      </documentation>
      <xmcda tag="categoriesProfiles" />
    </input>

    <input id="input3" name="criteria" displayName="criteria" isoptional="0">
      <documentation>
        <description>
        The criteria to consider, possibly with preference, indifference and
        veto thresholds. Each criterion must have a preference direction
        specified (min or max).
        </description>
      </documentation>
      <xmcda tag="criteria" />
    </input>

    <input id="input4" name="performanceTable" displayName="performanceTable" isoptional="0">
      <documentation>
        <description>The performance of the alternatives.</description>
      </documentation>
      <xmcda tag="performanceTable" />
    </input>

    <input id="input5" name="profilesPerformanceTable" displayName="profilesPerformanceTable" isoptional="0">
      <documentation>
        <description>The performance of the central profiles.</description>
      </documentation>
      <xmcda tag="performanceTable" />
    </input>

    <output id="output0" name="messages" displayName="messages">
      <documentation>
        <description>Messages or errors generated by this module.</description>
      </documentation>
      <xmcda tag="methodMessages" />
    </output>

    <output id="output1" name="discordances" displayName="discordances">
      <documentation>
        <description>
          Partial (i.e. per-criterion) discordance indices computed from the given data.
        </description>
      </documentation>
      <xmcda tag="alternativesComparisons" />
    </output>

  </parameters>
</program_description>
